{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-console": "off",
    "quotes": ["error", "single"],
    // we want to force semicolons
    "semi": ["error", "always"]
    // "quotes": ["error", "double"]
  }
}
